@model ExpedienteECO.Entidades.Consulta

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                    <h4 class="fw-bold text-primary mb-0">Detalle de Consulta Médica</h4>
                    <span class="badge bg-light text-dark border p-2">
                        ID: #@Model.Id
                    </span>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4 pb-3 border-bottom">
                        <div class="col-sm-6">
                            <small class="text-muted d-block text-uppercase fw-bold">Paciente</small>
                            <h5 class="mb-0">@Model.Estudiante.NombreCompleto</h5>
                        </div>
                        <div class="col-sm-6 text-sm-end">
                            <small class="text-muted d-block text-uppercase fw-bold">Fecha y Hora</small>
                            <p class="mb-0">@Model.FechaHora.ToString("dd/MM/yyyy hh:mm tt")</p>
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="small fw-bold text-muted text-uppercase">Motivo</label>
                            <p class="border-start border-3 border-primary ps-2">@Model.Motivo</p>
                        </div>
                        <div class="col-md-6">
                            <label class="small fw-bold text-muted text-uppercase">Signos Vitales</label>
                            <p class="border-start border-3 border-info ps-2">@Model.SignosVitales</p>
                        </div>
                        <div class="col-12">
                            <label class="small fw-bold text-muted text-uppercase">Síntomas y Observaciones</label>
                            <div class="bg-light p-3 rounded-3">@Model.Sintomas</div>
                        </div>
                        <div class="col-12">
                            <label class="small fw-bold text-muted text-uppercase">Diagnóstico</label>
                            <p class="fw-bold">@Model.Diagnostico</p>
                        </div>
                        <div class="col-12">
                            <label class="small fw-bold text-muted text-uppercase">Tratamiento</label>
                            <div class="alert alert-success border-0 shadow-sm">
                                <i class="bi bi-capsule me-2"></i>@Model.Tratamiento
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted italic">Atendido por: @Model.UsuarioId</small>
                        <div>

                            <a asp-action="Index" class="btn btn-primary btn-sm rounded-pill px-4">
                                <i class="bi bi-list-ul me-1"></i> Ver todas las consultas
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>