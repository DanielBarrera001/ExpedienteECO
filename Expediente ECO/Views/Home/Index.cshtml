@model ExpedienteECO.Controllers.DashboardViewModel

<div class="dashboard-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold m-0" style="color: var(--color-primario);">Dashboard Clínica ECO</h2>
            <p class="text-muted small">Bienvenido al sistema de control de enfermería escolar.</p>
        </div>
        <div class="d-flex gap-2">
            @* Se usa la clase btn-escuela-blue definida en site.css *@
            <button class="btn btn-escuela-blue px-4 shadow-sm" onclick="toggleSearch()">
                <i class="bi bi-plus-circle me-1"></i> Nueva Consulta
            </button>
        </div>
    </div>

    @*  (Encabezado y botones anteriores)  *@

    @* SECCIÓN DE BÚSQUEDA NORMALIZADA *@
    <div id="searchSection" class="card border-0 shadow-sm rounded-4 mb-4" style="display:none; background-color: rgba(51, 85, 153, 0.05); border-top: 4px solid var(--color-primario) !important;">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-bold m-0" style="color: var(--color-primario);"><i class="bi bi-person-search me-2"></i>Nueva Atención</h5>
                <button type="button" class="btn-close" onclick="toggleSearch()"></button>
            </div>

            @* Llamada a la Vista Parcial *@
            <partial name="_BuscadorPill" view-data='@new ViewDataDictionary(ViewData) {
                                                      { "IdBuscador", "inputBusquedaHome" },
                                                      { "Placeholder", "Escriba el nombre del niño/a..." }
                                                  }' />

            <div id="resultadosBusquedaHome" class="mt-n2"></div> @* mt-n2 para ajustar espacio con la parcial *@
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card info-card rounded-4 p-4 border-start border-primary border-5 h-100" style="border-left-color: var(--color-primario) !important;">
                <div class="d-flex align-items-center">
                    <div class="bg-soft-primario p-3 rounded-3 me-3">
                        <i class="bi bi-calendar2-check fs-3"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold m-0">@Model.TotalConsultasHoy</h3>
                        <span class="text-muted small fw-bold">Consultas Hoy</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            @* Mantenemos el onclick y verCriticos() *@
            <div class="card info-card rounded-4 p-4 border-start border-warning border-5 h-100 btn-hover"
                 onclick="verCriticos()" style="cursor: pointer;">
                <div class="d-flex align-items-center">
                    <div class="bg-soft-warning p-3 rounded-3 me-3 text-warning">
                        <i class="bi bi-heart-pulse-fill fs-3"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold m-0 text-dark">@Model.PacientesCriticosHoy</h3>
                        <span class="text-muted small fw-bold">Alumnos con Crónicos</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card info-card rounded-4 p-4 border-start border-5 h-100" style="border-left-color: var(--color-secundario) !important;">
                <div class="d-flex align-items-center">
                    <div class="bg-soft-secundario p-3 rounded-3 me-3">
                        <i class="bi bi-people fs-3"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold m-0">@Model.TotalEstudiantes</h3>
                        <span class="text-muted small fw-bold">Expedientes Totales</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                <h5 class="fw-bold mb-4" style="color: var(--color-primario);">Atenciones Recientes</h5>
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="bg-light small">
                            <tr>
                                <th class="border-0">Paciente</th>
                                <th class="border-0">Motivo</th>
                                <th class="border-0">Hora</th>
                                <th class="border-0 text-end">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ConsultasRecientes.Any())
                            {
                                @foreach (var item in Model.ConsultasRecientes)
                                {
                                    <tr class="@(item.Estudiante.TienePadecimiento ? "bg-soft-warning" : "")">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@(item.Estudiante.FotoPath ?? "/img/default-user.png")" class="avatar-sm me-2 shadow-sm" style="border: 2px solid var(--color-primario);">
                                                <div>
                                                    <span class="fw-bold text-dark">@item.Estudiante.NombreCompleto</span>
                                                    @if (item.Estudiante.TienePadecimiento)
                                                    {
                                                        <i class="bi bi-exclamation-triangle-fill text-warning ms-1" title="Paciente Crónico"></i>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-light text-primary border px-2 py-1">@item.Motivo</span></td>
                                        <td class="small text-muted">@item.FechaHora.ToString("hh:mm tt")</td>
                                        <td class="text-end">
                                            <a asp-controller="Consultas" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white rounded-pill px-3">
                                                Ver <i class="bi bi-arrow-right"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-5 text-muted">
                                        <i class="bi bi-info-circle me-2"></i> No hay atenciones registradas hoy.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                <h5 class="fw-bold mb-4" style="color: var(--color-secundario); border-bottom: 2px solid var(--color-secundario); padding-bottom: 10px;">
                    <i class="bi bi-box-seam me-2"></i>Stock Crítico
                </h5>
                @foreach (var item in Model.InsumosStockBajo)
                {
                    <div class="d-flex justify-content-between align-items-center p-3 mb-2 bg-soft-secundario rounded-3 border-start border-3 border-danger">
                        <span class="small fw-bold text-dark">@item.Nombre</span>
                        <span class="badge bg-danger rounded-pill shadow-sm">@item.StockActual uds</span>
                    </div>
                }
                @if (!Model.InsumosStockBajo.Any())
                {
                    <div class="text-center mt-4">
                        <i class="bi bi-check-all text-success display-4"></i>
                        <p class="text-muted">Inventario Completo</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@* Mantenemos el Modal intacto para el JS *@
<div class="modal fade" id="modalCriticos" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow rounded-4">
            <div class="modal-header border-0 bg-soft-warning">
                <h5 class="modal-title fw-bold text-dark"><i class="bi bi-heart-pulse-fill me-2 text-warning"></i>Pacientes Críticos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0" id="contenedorListaCriticos">
                <div class="text-center py-5">
                    <div class="spinner-border text-warning" role="status"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        /**
         * LÓGICA DEL BUSCADOR (VISTA PARCIAL)
         */
        document.addEventListener('input', function (e) {
            if (e.target && e.target.id === 'inputBusquedaHome') {
                buscarParaAtencion(e.target.value);
            }
        });

        /**
         * Función para buscar estudiantes en tiempo real
         */
        function buscarParaAtencion(valor) {
            const contenedorResultados = document.getElementById("resultadosBusquedaHome");

            // Solo busca si hay 3 o más caracteres
            if (valor.length < 3) {
                contenedorResultados.innerHTML = "";
                return;
            }

            fetch('/Estudiantes/BuscarParaConsulta?term=' + encodeURIComponent(valor))
                .then(response => {
                    if (!response.ok) throw new Error('Error en la red');
                    return response.text();
                })
                .then(html => {
                    contenedorResultados.innerHTML = html;
                })
                .catch(error => {
                    console.error('Error en la búsqueda:', error);
                });
        }

        /**
         * Control del panel de búsqueda (Mostrar/Ocultar)
         */
        function toggleSearch() {
            const section = document.getElementById("searchSection");
            const input = document.getElementById("inputBusquedaHome");

            if (section.style.display === "none" || section.style.display === "") {
                section.style.display = "block";
                if (input) input.focus();
            } else {
                section.style.display = "none";
                // Limpiar resultados al cerrar
                if (input) input.value = "";
                document.getElementById("resultadosBusquedaHome").innerHTML = "";
            }
        }

        /**
         * Lógica para mostrar Pacientes Críticos en el Modal
         */
        function verCriticos() {
            const modalElement = document.getElementById('modalCriticos');
            const contenedor = document.getElementById("contenedorListaCriticos");
            const modal = new bootstrap.Modal(modalElement);

            // Reset de cargando
            contenedor.innerHTML = `
                <div class="text-center py-5">
                    <div class="spinner-border text-warning" role="status"></div>
                    <p class="mt-2 small text-muted">Cargando pacientes críticos...</p>
                </div>`;

            modal.show();

            fetch('/Home/ListarPacientesCriticos')
                .then(response => {
                    if (!response.ok) throw new Error('Error al cargar críticos');
                    return response.text();
                })
                .then(html => {
                    contenedor.innerHTML = html;
                })
                .catch(error => {
                    contenedor.innerHTML = `
                        <div class="p-4 text-center text-danger">
                            <i class="bi bi-exclamation-octagon fs-2"></i>
                            <p>No se pudo cargar la lista.</p>
                        </div>`;
                });
        }

        /**
         * Cerrar panel con la tecla ESC
         */
        document.addEventListener('keydown', function(event) {
            if (event.key === "Escape") {
                const section = document.getElementById("searchSection");
                if (section && section.style.display === "block") {
                    toggleSearch();
                }
            }
        });
    </script>
}