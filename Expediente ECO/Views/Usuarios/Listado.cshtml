@model UsuariosListadoViewModel

@{
    ViewData["Title"] = "Gestión de Personal";
}

<div class="dashboard-container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold m-0 text-dark">Control de Usuarios</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item text-primary">Configuración</li>
                    <li class="breadcrumb-item active">Listado de Personal</li>
                </ol>
            </nav>
        </div>
        <a asp-action="Registro" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="bi bi-person-plus-fill me-1"></i> Nueva Cuenta
        </a>
    </div>

    @if (Model.Mensaje != null)
    {
        <div class="alert alert-success border-0 shadow-sm rounded-4 alert-dismissible fade show" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                <div>@Model.Mensaje</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4 p-4">
        @if (Model.Usuarios != null && Model.Usuarios.Any())
        {
            <div class="table-responsive">
                <table class="table align-middle table-hover">
                    <thead class="text-muted small">
                        <tr>
                            <th>Usuario / Correo</th>
                            <th class="text-center">Estado de Rol</th>
                            <th class="text-end">Acciones de Administración</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model.Usuarios)
                        {
                            var esUsuarioActual = usuario.Email == User.Identity.Name;
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-3 bg-soft-primary text-primary">
                                            <i class="bi bi-person-fill"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@usuario.Email</div>
                                            @if (esUsuarioActual)
                                            {
                                                <span class="badge bg-primary-subtle text-primary border border-primary-subtle small">Tu Sesión</span>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="text-muted small">Permisos de Sistema</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group shadow-sm rounded-3">
                                        <form method="post" asp-action="HacerAdmin" class="d-inline">
                                            <input type="hidden" name="email" value="@usuario.Email" />
                                            <button class="btn btn-white btn-sm border-end" type="submit"
                                                    title="Asignar permisos de administrador" @(esUsuarioActual ? "disabled" : "")>
                                                <i class="bi bi-shield-lock text-success me-1"></i> <small>Hacer Admin</small>
                                            </button>
                                        </form>

                                        <form method="post" asp-action="RemoverAdmin" class="d-inline">
                                            <input type="hidden" name="email" value="@usuario.Email" />
                                            <button class="btn btn-white btn-sm" type="submit"
                                                    title="Remover permisos" @(esUsuarioActual ? "disabled" : "")>
                                                <i class="bi bi-shield-slash text-danger me-1"></i> <small>Quitar Admin</small>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                <p class="mt-3 text-muted">No hay usuarios registrados en el sistema.</p>
            </div>
        }
    </div>
</div>

<style>
    .bg-soft-primary {
        background-color: #eef2ff;
        color: #4f46e5;
    }

    .avatar-sm {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
    }

    .btn-white {
        background: white;
        border: 1px solid #f0f0f0;
        color: #666;
    }

        .btn-white:hover:not([disabled]) {
            background: #f8f9fa;
            color: #333;
        }

        .btn-white[disabled] {
            background: #fafafa;
            opacity: 0.6;
        }
</style>