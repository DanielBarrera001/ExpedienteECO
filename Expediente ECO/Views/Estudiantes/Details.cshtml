@model ExpedienteECO.Entidades.Estudiante

<div class="dashboard-container py-4">
    @* Encabezado con Acciones Principales *@
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div>
            <h2 class="fw-bold m-0 text-dark">
                <i class="bi bi-person-badge me-2" style="color: var(--color-primario);"></i>Expediente Médico
            </h2>
            <p class="text-muted small mb-0">Consulta de antecedentes y registros clínicos del estudiante.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning rounded-pill px-4 shadow-sm fw-bold">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-light rounded-pill px-4 border shadow-xs">
                <i class="bi bi-arrow-left me-1"></i> Volver
            </a>
        </div>
    </div>

    <div class="row g-4">
        @* Columna Lateral: Perfil y Contacto *@
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 mb-4 text-center">
                <div class="position-relative d-inline-block mb-3">
                    <img src="@(string.IsNullOrEmpty(Model.FotoPath) ? "/img/default-user.png" : Model.FotoPath)"
                         class="rounded-circle shadow-sm border border-4 border-white"
                         style="width: 140px; height: 140px; object-fit: cover;"
                         alt="Foto de @Model.NombreCompleto" />

                    @if (Model.TienePadecimiento)
                    {
                        <span class="position-absolute top-0 end-0 badge rounded-circle bg-danger p-2 border border-3 border-white shadow animate__animated animate__pulse animate__infinite">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                        </span>
                    }
                </div>

                <h4 class="fw-bold mb-1 text-dark">@Model.NombreCompleto</h4>
                <span class="badge bg-soft-primario text-primary rounded-pill px-3 py-2 border border-primary border-opacity-10 mb-3">
                    @Model.Grado "@Model.Seccion"
                </span>

                <div class="text-start mt-3">
                    <div class="mb-3 p-3 bg-light rounded-3 shadow-xs">
                        <label class="label-caps d-block mb-1">Responsable</label>
                        <span class="text-dark fw-medium">@Model.NombrePadre</span>
                    </div>
                    <div class="mb-3 p-3 bg-light rounded-3 shadow-xs">
                        <label class="label-caps d-block mb-1">WhatsApp Emergencia</label>
                        <a href="https://wa.me/@Model.TelefonoResponsable.Replace("-", "")" target="_blank" class="text-success text-decoration-none fw-bold d-flex align-items-center">
                            <i class="bi bi-whatsapp me-2 fs-5"></i> @Model.TelefonoResponsable
                        </a>
                    </div>
                    <div class="mb-0 p-3 bg-light rounded-3 shadow-xs">
                        <label class="label-caps d-block mb-1">Fecha de Nacimiento</label>
                        <span class="text-dark">@Model.FechaNacimiento.ToString("dd 'de' MMMM, yyyy")</span>
                    </div>
                </div>
            </div>

            @* Zona de Peligro *@
            <div class="card border-0 shadow-sm rounded-4 p-4 border-start border-danger border-4 bg-soft-danger-light">
                <h6 class="fw-bold text-danger mb-2"><i class="bi bi-shield-lock me-2"></i>Seguridad</h6>
                <p class="small text-muted mb-3">Eliminar este registro borrará permanentemente todo el historial clínico asociado.</p>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm rounded-pill w-100 fw-bold transition-all">
                    <i class="bi bi-trash me-1"></i> Eliminar Registro
                </a>
            </div>
        </div>

        @* Columna Principal *@
        <div class="col-lg-8">
            @* Tarjeta Médica Critica *@
            <div class="card border-0 shadow-sm rounded-4 p-4 mb-4">
                <h5 class="fw-bold border-bottom pb-2 mb-4 text-dark">
                    <i class="bi bi-heart-pulse-fill text-danger me-2"></i>Ficha Médica Vital
                </h5>
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label class="label-caps">Padecimientos Crónicos</label>
                        <div class="p-3 rounded-3 mt-1 shadow-xs border-start border-4 @(Model.TienePadecimiento ? "bg-soft-warning border-warning" : "bg-light border-secondary")">
                            <span class="fw-bold @(Model.TienePadecimiento ? "text-dark" : "text-muted")">
                                @Model.PadecimientosCronicos
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label class="label-caps">Alergias Detectadas</label>
                        <div class="p-3 bg-soft-secundario rounded-3 mt-1 shadow-xs border-start border-danger border-4">
                            <span class="text-danger fw-bold">@Model.Alergias</span>
                        </div>
                    </div>
                    <div class="col-12">
                        <label class="label-caps">Medicación Permanente</label>
                        <div class="p-3 bg-light rounded-3 mt-1 shadow-xs border-start border-success border-4">
                            <i class="bi bi-capsule-pill me-2 text-success"></i>
                            <span class="fw-medium text-dark">@Model.MedicacionPermanente</span>
                        </div>
                    </div>
                </div>
            </div>

            @* Observaciones *@
            <div class="card border-0 shadow-sm rounded-4 p-4 mb-4">
                <h5 class="fw-bold border-bottom pb-2 mb-3 text-dark">
                    <i class="bi bi-journal-text me-2 text-muted"></i>Observaciones Especiales
                </h5>
                <div class="bg-light p-3 rounded-3 border-dashed-custom" style="min-height: 80px;">
                    <p class="text-dark mb-0 @(string.IsNullOrEmpty(Model.NotasEspeciales) ? "fst-italic text-muted" : "")">
                        @(string.IsNullOrEmpty(Model.NotasEspeciales) ? "No hay observaciones adicionales registradas." : Model.NotasEspeciales)
                    </p>
                </div>
            </div>

            @* Historial de Consultas *@
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-2">
                    <h5 class="fw-bold m-0 text-dark">
                        <i class="bi bi-clock-history me-2 text-muted"></i>Historial de Atenciones
                    </h5>
                    <div class="d-flex gap-2">
                        <a asp-controller="Reportes" asp-action="Generar"
                           asp-route-tipo="estudiante_historial" asp-route-estudianteId="@Model.Id"
                           class="btn btn-sm btn-outline-danger rounded-pill px-3 fw-medium">
                            <i class="bi bi-file-earmark-pdf-fill"></i> PDF
                        </a>
                        <a asp-controller="Consultas" asp-action="Create" asp-route-estudianteId="@Model.Id"
                           class="btn btn-sm btn-primary rounded-pill px-3 shadow-sm" style="background-color: var(--color-primario);">
                            <i class="bi bi-plus-lg"></i> Nueva Consulta
                        </a>
                    </div>
                </div>

                @if (Model.Consultas != null && Model.Consultas.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr class="label-caps">
                                    <th class="border-0 ps-3">Fecha</th>
                                    <th class="border-0">Diagnóstico</th>
                                    <th class="border-0 text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var consulta in Model.Consultas.OrderByDescending(c => c.FechaHora))
                                {
                                    <tr>
                                        <td class="ps-3">
                                            <div class="fw-bold text-dark">@consulta.FechaHora.ToString("dd/MM/yyyy")</div>
                                            <small class="text-muted">@consulta.FechaHora.ToString("hh:mm tt")</small>
                                        </td>
                                        <td>
                                            <span class="badge bg-soft-primario text-primary border-0 mb-1" style="font-size: 0.7rem;">@consulta.Motivo</span>
                                            <div class="small text-muted text-truncate" style="max-width: 280px;">@consulta.Diagnostico</div>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group shadow-xs rounded-pill overflow-hidden border">
                                                <a asp-controller="Consultas" asp-action="Details" asp-route-id="@consulta.Id"
                                                   class="btn btn-white btn-sm border-0" title="Ver Detalles">
                                                    <i class="bi bi-eye-fill text-primary"></i>
                                                </a>
                                                <a asp-controller="Reportes" asp-action="ImprimirConsulta" asp-route-id="@consulta.Id"
                                                   target="_blank" class="btn btn-white btn-sm border-0" title="Imprimir">
                                                    <i class="bi bi-printer-fill text-danger"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5 bg-light rounded-4 border-dashed-custom">
                        <i class="bi bi-folder-x display-4 text-muted mb-3 d-block"></i>
                        <p class="text-muted mb-0">No hay visitas registradas aún.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>