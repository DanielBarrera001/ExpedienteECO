@using ExpedienteECO.Entidades
@model IEnumerable<ExpedienteECO.Entidades.Estudiante>

@{
    var lista = Model ?? new List<Estudiante>();
}

@if (lista.Any())
{
    <div class="list-group shadow-sm border-0 rounded-4 overflow-hidden">
        @foreach (var item in lista)
        {
            <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3 border-0 border-bottom">
                <div class="d-flex align-items-center">
                    @* Avatar con indicación de estado *@
                    <div class="position-relative">
                        <img src="@(string.IsNullOrEmpty(item.FotoPath) ? "/img/default-user.png" : item.FotoPath)"
                             class="rounded-circle me-3 shadow-sm border border-2 @(item.TienePadecimiento ? "border-warning" : "border-light")"
                             style="width: 52px; height: 52px; object-fit: cover;">

                        @if (item.TienePadecimiento)
                        {
                            <span class="position-absolute top-0 start-0 translate-middle badge rounded-circle bg-warning p-1 border border-white" title="Padecimiento Crónico">
                                <i class="bi bi-exclamation-triangle-fill text-dark" style="font-size: 0.6rem;"></i>
                            </span>
                        }
                    </div>

                    <div>
                        <h6 class="mb-0 fw-bold text-dark">@item.NombreCompleto</h6>
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge bg-soft-primario text-primary text-xs fw-medium">
                                @item.Grado - @item.Seccion
                            </span>

                            @if (item.TienePadecimiento)
                            {
                                <span class="text-warning fw-bold text-xs">
                                    <i class="bi bi-heart-pulse-fill"></i> @item.PadecimientosCronicos
                                </span>
                            }
                        </div>
                    </div>
                </div>

                <div class="text-end">
                    <a asp-controller="Consultas"
                       asp-action="Create"
                       asp-route-estudianteId="@item.Id"
                       class="btn btn-primary btn-sm rounded-pill px-4 shadow-sm fw-bold"
                       style="background-color: var(--color-primario);">
                        <i class="bi bi-stethoscope me-1"></i> Atender
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card border-0 bg-light rounded-4 text-center py-5 shadow-sm animate-slide-up">
        <div class="card-body">
            <div class="mb-3">
                <i class="bi bi-person-search display-4 text-muted opacity-50"></i>
            </div>
            <h5 class="text-dark fw-bold">Sin coincidencias</h5>
            <p class="text-muted small mx-auto" style="max-width: 250px;">
                No encontramos ningún estudiante con ese nombre en la base de datos actual.
            </p>
            <div class="mt-4">
                <a asp-controller="Estudiantes" asp-action="Create" class="btn btn-outline-primary btn-sm rounded-pill px-4">
                    <i class="bi bi-plus-lg me-1"></i> Registrar Nuevo Ingreso
                </a>
            </div>
        </div>
    </div>
}