<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpedienteECO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpedienteECO.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo_escuela.png" alt="Logo Oasis" class="brand-logo me-2" onerror="this.style.display='none'">
                    <span>Expediente ECO</span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ms-lg-4">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Principal
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Estudiantes" asp-action="Index">
                                <i class="bi bi-people me-1"></i> Estudiantes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Consultas" asp-action="Index">
                                <i class="bi bi-journal-medical me-1"></i> Consultas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Medicamentos" asp-action="Index">
                                <i class="bi bi-capsule me-1"></i> Medicamentos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Reportes" asp-action="Index">
                                <i class="bi bi-bar-chart-line me-1"></i> Reportes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Comunicaciones" asp-action="Index">
                                <i class="bi bi-chat-dots me-1"></i> Comunicaciones
                            </a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <div class="d-none d-sm-flex align-items-center me-2">
                            <span class="badge bg-soft-primary text-primary rounded-pill px-3 py-2">
                                <i class="bi bi-person-circle me-1"></i> @(User.Identity?.Name ?? "Admin")
                            </span>
                        </div>

                        <form asp-controller="Usuarios" asp-action="Logout" method="post" id="logoutForm">
                            <button type="submit" class="btn btn-logout rounded-pill px-3 d-flex align-items-center shadow-sm">
                                <i class="bi bi-box-arrow-right me-1"></i>
                                <span class="d-none d-md-inline">Cerrar Sesión</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-muted shadow-sm">
        <div class="container text-center">
            <span class="small">&copy; @DateTime.Now.Year - <b>ExpedienteECO</b> | Clínica Escolar Digital</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>