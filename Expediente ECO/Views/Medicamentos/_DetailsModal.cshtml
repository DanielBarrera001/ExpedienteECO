@model ExpedienteECO.Entidades.Medicamento

<div class="modal-header bg-info text-white">
    <h5 class="modal-title"><i class="fas fa-info-circle me-2"></i>Detalles: @Model.Nombre</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-6 text-center border-end">
            <h6 class="text-muted">Estado de Inventario</h6>
            <div class="display-4 fw-bold @(Model.StockActual <= Model.StockMinimo ? "text-danger" : "text-success")">
                @Model.StockActual
            </div>
            <p>Unidades disponibles</p>
        </div>
        <div class="col-md-6">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Mínimo requerido:</strong> @Model.StockMinimo</li>
                <li class="list-group-item"><strong>Categoría:</strong> Insumo Clínico</li>
                <li class="list-group-item text-danger">
                    <strong>Alerta:</strong> @(Model.StockActual <= Model.StockMinimo ? "Reabastecimiento urgente" : "Nivel óptimo")
                </li>
            </ul>
        </div>
    </div>
    <hr />
    <div class="mt-3">
        <h6><i class="fas fa-notes-medical me-2 text-primary"></i>Indicaciones Generales</h6>
        <p class="text-muted italic">
            @(string.IsNullOrEmpty(Model.Indicaciones) ? "No hay instrucciones específicas registradas para este medicamento." : Model.Indicaciones)
        </p>
    </div>
</div>
<div class="modal-footer">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Editar Información</a>
    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cerrar</button>
</div>